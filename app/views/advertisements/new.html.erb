<h1>New Advertisement</h1>

<div class="row">
  <div class="col-md-4">
    <p>Guidelines for Advertisements</p>
    <ul>
      <li>No swearing.</li>
      <li>No derogatory language.</li>
      <li>The incessant use of hashtags will get you banned.</li>
    </ul>
  </div>
  <div class="col-md-8">
    <%= form_for @advertisement do |ad| %>
      <div class="form-group">
        <%= ad.label :title %>
        <%= ad.text_field :title, class: 'form-control', placeholder: "Enter advertisement title" %>
      </div>
      <div class="form-group"
        <%= ad.label :copy %>
        <%= ad.text_area :copy, rows: 8, class: 'form-control', placeholder: "Enter advertisement body" %>
      </div>
      <div class="form-group">
        <%= ad.label :price %>
        <%= ad.text_area :price, class: 'form-control', placeholder: "Enter the price" %>
      </div>
      <div class="form-group">
        <%= ad.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
